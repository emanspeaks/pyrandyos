/* VibeDark Theme */

/* QToolBar */
QToolBar QToolButton {
    background: transparent;
    color: #fff;
    border: none;
}
QToolBar QToolButton:hover {
    background: #444a5a;
    color: #fff;
    border-radius: 4px;
}
QToolBar QToolButton:pressed {
    background: #2a82da;
    color: #fff;
}

/* QLabel */
QLabel#status_label {
    padding: 2px 8px;
    background: #444a5a;
    color: #fff;
    border-radius: 4px;
}
QLabel#status_label:hover {
    background: #2a82da;
    color: #fff;
}

/* QTreeView */
QTreeView {
    background-color: #232323;
    color: #f0f0f0;
    alternate-background-color: #2d2d2d;
    selection-background-color: #4fa3f7;
    selection-color: #ffffff;
    gridline-color: #444a5a;
    border: 1px solid #222;
}
QTreeView::branch:has-children:hover {
    background: #2a82da;
    border-radius: 4px;
}
QTreeView::branch:has-children:!has-siblings:adjoins-item:hover {
    background: #2a82da;
    border-radius: 4px;
}
QTreeView::branch:open:hover, QTreeView::branch:closed:hover {
    background: #2a82da;
    border-radius: 4px;
}
/* Branch lines - using background images for proper tree structure */
QTreeView::branch:has-siblings:!adjoins-item {
    border-image: none;
    image: url(:/icons/vline.svg);
}
QTreeView::branch:has-siblings:adjoins-item {
    border-image: none;
    image: url(:/icons/branch-more.svg);
}
QTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: none;
    image: url(:/icons/branch-end.svg);
}

/* Branch icons with background cleared */
QTreeView::branch:open {
    background: transparent;
}
QTreeView::branch:closed {
    background: transparent;
}
QTreeView::branch:closed:has-children {
    border-image: none;
    image: url(:/icons/branch-closed.svg);
}
QTreeView::branch:open:has-children {
    border-image: none;
    image: url(:/icons/branch-open.svg);
}
QTreeView::item:selected {
    background: #2a82da;
    color: #fff;
}
QTreeView::item:hover {
    background: #444a5a;
    color: #fff;
}

/* QHeaderView */
QHeaderView::section {
    background-color: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    padding: 4px;
}

/* QScrollBar */
QScrollBar:vertical {
    background: #232323;
    width: 12px;
    margin: 0px;
}
QScrollBar::handle:vertical {
    background: #444a5a;
    min-height: 20px;
    border-radius: 6px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
    border: none;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
QScrollBar:horizontal {
    background: #232323;
    height: 12px;
    margin: 0px;
}
QScrollBar::handle:horizontal {
    background: #444a5a;
    min-width: 20px;
    border-radius: 6px;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* QDialogButtonBox */
QDialogButtonBox QPushButton {
    background-color: #444a5a;
    color: #fff;
    border: 1px solid #2a82da;
    border-radius: 4px;
    padding: 4px 12px;
}
QDialogButtonBox QPushButton:hover {
    background-color: #2a82da;
    color: #fff;
}
QDialogButtonBox QPushButton:pressed {
    background-color: #1a5a9a;
}

/* QLineEdit */
QLineEdit {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 4px;
    padding: 4px 8px;
    selection-background-color: #2a82da;
    selection-color: #fff;
}
QLineEdit:focus {
    border: 1.5px solid #2a82da;
    background: #232b3a;
}
QLineEdit[readOnly="true"] {
    background: #2d2d2d;
    color: #888;
}
QLineEdit:disabled {
    background: #232323;
    color: #888;
}
QLineEdit[text=""] {
    color: #888;
}

/* QTextEdit */
QTextEdit {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 4px;
    selection-background-color: #4fa3f7;
    selection-color: #fff;
}
QTextEdit:focus {
    border: 1.5px solid #2a82da;
    background: #232b3a;
}
QTextEdit:disabled {
    background: #232323;
    color: #888;
}

/* QPlainTextEdit */
QPlainTextEdit {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 4px;
    selection-background-color: #2a82da;
    selection-color: #fff;
}
QPlainTextEdit:focus {
    border: 1.5px solid #2a82da;
    background: #232b3a;
}
QPlainTextEdit:disabled {
    background: #232323;
    color: #888;
}

/* QComboBox */
QComboBox {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 4px;
    padding: 4px 8px;
    selection-background-color: #2a82da;
    selection-color: #fff;
}
QComboBox:focus {
    border: 1.5px solid #2a82da;
}
QComboBox QAbstractItemView {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #2a82da;
    /* selection-background-color: #4fa3f7;
    selection-color: #fff; */
}
QComboBox QAbstractItemView::item {
    background: transparent;
    color: #f0f0f0;
    border: none;
    border-radius: 0;
    padding: 4px 12px;
}
QComboBox QAbstractItemView::item:selected {
    background: #4fa3f7;
    color: #232323;
    border: 2px solid #2a82da;
    border-radius: 4px;
    font-weight: bold;
}
QComboBox QAbstractItemView::item:hover {
    background: #2a82da !important;
    color: #fff !important;
    border: 2px solid #4fa3f7 !important;
    border-radius: 4px !important;
    font-weight: bold !important;
}
QComboBox::drop-down {
    background: #232323;
    border-left: 1px solid #444a5a;
    width: 24px;
}
QComboBox::down-arrow {
    image: url(:/icons/arrow-down.svg);
    width: 16px;
    height: 16px;
}

/* QTabWidget */
QTabWidget::pane {
    border: 1px solid #444a5a;
    background: #232323;
    border-radius: 6px;
}
QTabBar::tab {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 6px 16px;
    margin-right: 2px;
}
QTabBar::tab:selected, QTabBar::tab:hover {
    background: #2a82da;
    color: #fff;
    border-color: #2a82da;
}
QTabBar::tab:!selected {
    background: #232323;
    color: #aaa;
}

/* QMenu, QMenuBar */
QMenuBar {
    background: #232323;
    color: #f0f0f0;
}
QMenuBar::item {
    background: transparent;
    color: #f0f0f0;
    padding: 4px 12px;
}
QMenuBar::item:selected {
    background: #2a82da;
    color: #fff;
    border-radius: 4px;
}
QMenu {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 6px;
}
QMenu::item {
    background: transparent;
    color: #f0f0f0;
    padding: 6px 24px 6px 24px;
    border-radius: 4px;
}
QMenu::item:selected {
    background: #2a82da;
    color: #fff;
}
QMenu::separator {
    height: 1px;
    background: #444a5a;
    margin: 4px 0;
}

/* QStatusBar */
QStatusBar {
    background: #232323;
    color: #f0f0f0;
    border-top: 1px solid #444a5a;
}
QStatusBar QLabel {
    color: #f0f0f0;
}

/* QGroupBox */
QGroupBox {
    border: 1px solid #444a5a;
    border-radius: 6px;
    margin-top: 16px;
    background: #232323;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #2a82da;
    background: transparent;
}

/* QSlider */
QSlider::groove:horizontal {
    border: 1px solid #444a5a;
    height: 6px;
    background: #232323;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #2a82da;
    border: 1px solid #2a82da;
    width: 16px;
    margin: -5px 0;
    border-radius: 8px;
}
QSlider::groove:vertical {
    border: 1px solid #444a5a;
    width: 6px;
    background: #232323;
    border-radius: 3px;
}
QSlider::handle:vertical {
    background: #2a82da;
    border: 1px solid #2a82da;
    height: 16px;
    margin: 0 -5px;
    border-radius: 8px;
}

/* QProgressBar */
QProgressBar {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 6px;
    text-align: center;
    height: 18px;
}
QProgressBar::chunk {
    background-color: #2a82da;
    border-radius: 6px;
}

/* QListView, QTableView */
QListView, QTableView {
    background: #232323;
    color: #f0f0f0;
    alternate-background-color: #2d2d2d;
    selection-background-color: #2a82da;
    selection-color: #fff;
    border: 1px solid #222;
}
QListView::item:selected, QTableView::item:selected {
    background: #2a82da;
    color: #fff;
}
QListView::item:hover, QTableView::item:hover {
    background: #444a5a;
    color: #fff;
}

/* QSpinBox, QDoubleSpinBox */
QSpinBox, QDoubleSpinBox {
    background: #232323;
    color: #f0f0f0;
    border: 1px solid #444a5a;
    border-radius: 4px;
    padding: 4px 8px;
}
QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1.5px solid #2a82da;
}
QSpinBox:disabled, QDoubleSpinBox:disabled {
    color: #888;
}
QSpinBox::up-button, QSpinBox::down-button,
QDoubleSpinBox::up-button, QDoubleSpinBox::down-button {
    background: #232323;
    border: 1px solid #444a5a;
    width: 18px;
    border-radius: 2px;
}
QSpinBox::up-button:hover, QSpinBox::down-button:hover,
QDoubleSpinBox::up-button:hover, QDoubleSpinBox::down-button:hover {
    background: #2a82da;
}
QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    image: url(:/icons/arrow-up.svg);
    width: 12px;
    height: 12px;
}
QSpinBox::down-arrow, QDoubleSpinBox::down-arrow {
    image: url(:/icons/arrow-down.svg);
    width: 12px;
    height: 12px;
}

/* QCheckBox, QRadioButton */
QCheckBox, QRadioButton {
    color: #f0f0f0;
    spacing: 8px;
}
QCheckBox:disabled, QRadioButton:disabled {
    color: #888;
}
QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    border: 1.5px solid #444a5a;
    background: #232323;
}
QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background: #2a82da;
    border: 1.5px solid #2a82da;
}
QCheckBox::indicator:unchecked, QRadioButton::indicator:unchecked {
    background: #232323;
    border: 1.5px solid #444a5a;
}
QCheckBox::indicator:indeterminate {
    background: #444a5a;
    border: 1.5px solid #2a82da;
}

/* QSplitter */
QSplitter::handle {
    background: #444a5a;
    border-radius: 2px;
}
QSplitter::handle:horizontal {
    width: 6px;
}
QSplitter::handle:vertical {
    height: 6px;
}
QSplitter::handle:hover {
    background: #555b6b;
}

/* QToolTip */
QToolTip {
    color: #ffffff;
    background-color: #444a5a;
    border: 1px solid white;
    border-radius: 4px;
    /* padding: 4px 8px; */
    font-size: 12px;
}

/* Disabled state for all widgets */
*:disabled {
    color: #888888;
    background: #2d2d2d;
    border-color: #444a5a;
}
